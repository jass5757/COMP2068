<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
      <div class="card shadow">
        <div class="card-body p-5">
          <h2 class="text-center mb-4">
            <i class="fas fa-sign-in-alt"></i> Login
          </h2>

          <form action="/auth/login" method="POST">
            <div class="mb-3">
              <label for="email" class="form-label">Email</label>
              <input 
                type="email" 
                class="form-control" 
                id="email" 
                name="email" 
                required
                placeholder="Enter your email"
              >
            </div>

            <div class="mb-3">
              <label for="password" class="form-label">Password</label>
              <input 
                type="password" 
                class="form-control" 
                id="password" 
                name="password" 
                required
                placeholder="Enter your password"
              >
            </div>

            <button type="submit" class="btn btn-primary w-100 mb-3">
              <i class="fas fa-sign-in-alt"></i> Login
            </button>
          </form>

          <div class="text-center mb-3">
            <span class="text-muted">OR</span>
          </div>

          <a href="/auth/github" class="btn btn-dark w-100 mb-3" id="githubBtn">
            <i class="fab fa-github"></i> Login with GitHub
          </a>

          <script>
            // Hide GitHub button if not configured
            if (!window.location.search.includes('github_disabled')) {
              fetch('/auth/github')
                .then(res => {
                  if (res.redirected && res.url.includes('github_disabled')) {
                    document.getElementById('githubBtn').style.display = 'none';
                    document.querySelector('.text-center.mb-3').style.display = 'none';
                  }
                })
                .catch(() => {});
            }
          </script>

          <div class="text-center">
            <p class="mb-0">
              Don't have an account? 
              <a href="/auth/register">Register here</a>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>