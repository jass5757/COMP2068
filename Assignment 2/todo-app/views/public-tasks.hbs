<div class="container my-5">
  <div class="row mb-4">
    <div class="col">
      <h1><i class="fas fa-globe"></i> Public Tasks</h1>
      <p class="text-muted">Browse all tasks from our community (read-only)</p>
    </div>
  </div>

  {{#if tasks}}
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
      {{#each tasks}}
        <div class="col">
          <div class="card h-100 task-card priority-{{this.priority}} {{#if this.completed}}completed{{/if}}">
            <div class="card-body">
              <div class="d-flex justify-content-between align-items-start mb-2">
                <h5 class="card-title {{#if this.completed}}text-decoration-line-through{{/if}}">
                  {{#if this.completed}}
                    <i class="fas fa-check-circle text-success"></i>
                  {{/if}}
                  {{this.title}}
                </h5>
                <span class="badge bg-{{#if (eq this.priority 'high')}}danger{{else}}{{#if (eq this.priority 'medium')}}warning{{else}}success{{/if}}{{/if}}">
                  {{this.priority}}
                </span>
              </div>
              
              {{#if this.description}}
                <p class="card-text">{{this.description}}</p>
              {{/if}}

              <div class="mt-3">
                <small class="text-muted">
                  <i class="fas fa-user"></i> By: {{this.user.name}}
                </small>
                <br>
                {{#if this.dueDate}}
                  <small class="text-muted">
                    <i class="fas fa-calendar"></i> Due: {{formatDate this.dueDate}}
                    {{#if (isOverdue this.dueDate)}}
                      <span class="badge bg-danger ms-1">Overdue</span>
                    {{/if}}
                    {{#if (isDueToday this.dueDate)}}
                      <span class="badge bg-warning ms-1">Due Today</span>
                    {{/if}}
                  </small>
                {{/if}}
              </div>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  {{else}}
    <div class="text-center py-5">
      <i class="fas fa-inbox fa-5x text-muted mb-3"></i>
      <h3>No tasks yet</h3>
      <p class="text-muted">Be the first to create a task!</p>
      {{#unless user}}
        <a href="/auth/register" class="btn btn-primary">Get Started</a>
      {{/unless}}
    </div>
  {{/if}}
</div>