<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-lg-6">
      <div class="card shadow border-danger">
        <div class="card-body p-4">
          <h2 class="mb-4 text-danger">
            <i class="fas fa-exclamation-triangle"></i> Delete Task
          </h2>

          <div class="alert alert-danger">
            <strong>Warning!</strong> This action cannot be undone.
          </div>

          <div class="card bg-light mb-4">
            <div class="card-body">
              <h5 class="card-title">{{task.title}}</h5>
              {{#if task.description}}
                <p class="card-text">{{task.description}}</p>
              {{/if}}
              <div class="mt-2">
                <span class="badge bg-{{#if (eq task.priority 'high')}}danger{{else}}{{#if (eq task.priority 'medium')}}warning{{else}}success{{/if}}{{/if}}">
                  {{task.priority}} priority
                </span>
                {{#if task.dueDate}}
                  <span class="text-muted ms-2">
                    <i class="fas fa-calendar"></i> Due: {{formatDate task.dueDate}}
                  </span>
                {{/if}}
              </div>
            </div>
          </div>

          <p class="mb-4">Are you sure you want to delete this task?</p>

          <form action="/tasks/delete/{{task._id}}" method="POST" class="d-inline">
            <button type="submit" class="btn btn-danger">
              <i class="fas fa-trash"></i> Yes, Delete Task
            </button>
            <a href="/tasks" class="btn btn-secondary">
              <i class="fas fa-times"></i> Cancel
            </a>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>